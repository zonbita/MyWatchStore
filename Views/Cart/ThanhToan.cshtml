@{
    ViewBag.Title = "DatHang";
    Layout = "~/Views/Shared/_WatchStoreLayout.cshtml";
}
@section ViewCss {
    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <link href="~/Content/SingleView.css" type="text/css" runat="server" media="screen" rel="stylesheet" />
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
}

<h2>THÔNG TIN GIỎ HÀNG</h2>
<hr />
<h3 style="text-align: center">SẢN PHẨM</h3>
<hr />
<div class="container">
    <table id="cart" class="table table-hover table-condensed">
        <thead>
            <tr>
                <th style="width:50%">Sản phẩm</th>
                <th style="width:10%">Giá</th>
                <th style="width:8%">Số lượng</th>
                <th style="width:32%" class="text-center">Thành tiền</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td data-th="Product">
                        <div class="row">
                            <div class="col-sm-2 hidden-xs"><img src="~/DataImages/@item.sImage" alt="@item.sTenDH" class="img-responsive" /></div>
                            <div class="col-sm-10">
                                <h4 class="nomargin">@item.sTenDH</h4>
                            </div>
                        </div>
                    </td>
                    <td data-th="Price">@item.iDonGia</td>
                    <td data-th="Quantity">
                        <input type="number" name="SoLuong" class="form-control text-center" value="@item.iSoLuong">
                    </td>
                    <td data-th="Subtotal" class="text-center">@item.iThanhTien đ</td>
                </tr>
            }
        </tbody>
    </table>
    <hr />
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <div class="form-dangky container">
            <form class="form-horizontal">
                <div class="form-group">
                    <label class="control-label col-sm-2" for="hoten">Họ tên: </label>
                    <div class="col-sm-10">
                        @Html.TextBox("HoTen", null, new { @class = "form-control", @id = "hoten", @placeholder = "Nhập họ tên" })
                        @ViewData["Error1"]
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2" for="sdt">Số điện thoại:</label>
                    <div class="col-sm-10">
                        @Html.TextBox("Sdt", null, new { @class = "form-control", @id = "email", @placeholder = "Nhập số điện thoại" })
                        @ViewData["Error2]"]
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2" for="email">Địa chỉ: </label>
                    <div class="col-sm-10">
                        @Html.TextBox("DiaChi", null, new { @class = "form-control", @id = "diachi", @placeholder = "Nhập địa chỉ" })
                        @ViewData["Error3"]
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2" for="email">Ngày đặt: </label>
                    <div class="col-sm-10">
                        <p>@DateTime.Now.ToShortDateString()</p>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <p>TỔNG TIỀN: @ViewBag.TongTien</p>
                        <input type="submit" class="btn btn-success btn-block" value="ĐỒNG Ý ĐẶT HÀNG"/>
                    </div>
                </div>
            </form>
        </div>
    }
</div>

